<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDefault"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/nav_head_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nav_head_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:elevation="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            style="@style/textShadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="鱼"
            android:textColor="@color/colorWhite"
            android:textSize="22sp" />

    </LinearLayout>

    <com.xu.xmaster.views.NavItemView
        android:id="@+id/nav_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:src="@drawable/ic_photo"
        app:text="图片">

    </com.xu.xmaster.views.NavItemView>

    <com.xu.xmaster.views.NavItemView
        android:id="@+id/nav_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:src="@drawable/ic_video"
        app:text="视频">

    </com.xu.xmaster.views.NavItemView>

    <com.xu.xmaster.views.NavItemView
        android:id="@+id/nav_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:src="@drawable/ic_link"
        app:text="链接">

    </com.xu.xmaster.views.NavItemView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDDD" />

    <com.xu.xmaster.views.NavItemView
        android:id="@+id/nav_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:src="@drawable/ic_music"
        app:text="音乐">

    </com.xu.xmaster.views.NavItemView>

    <com.xu.xmaster.views.NavItemView
        android:id="@+id/nav_translate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:src="@drawable/ic_trans"
        app:text="翻译">

    </com.xu.xmaster.views.NavItemView>

    <com.xu.xmaster.views.NavItemView
        android:id="@+id/nav_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:src="@drawable/ic_wea"
        app:text="天气">

    </com.xu.xmaster.views.NavItemView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDDD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.xu.xmaster.views.NavItemView
            android:id="@+id/nav_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:gravity="center"
            app:imageview_size="22dp"
            app:layout_padding_bottom="10dp"
            app:layout_padding_left="0dp"
            app:layout_padding_right="0dp"
            app:layout_padding_top="10dp"
            app:src="@drawable/ic_settings"
            app:text="设置"
            app:textsize="14sp"
            app:textview_padding_left="5dp">

        </com.xu.xmaster.views.NavItemView>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorDDD" />

        <com.xu.xmaster.views.NavItemView
            android:id="@+id/nav_exit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:gravity="center"
            app:imageview_size="22dp"
            app:layout_padding_bottom="10dp"
            app:layout_padding_left="0dp"
            app:layout_padding_right="0dp"
            app:layout_padding_top="10dp"
            app:src="@drawable/ic_exit"
            app:text="退出"
            app:textsize="14sp"
            app:textview_padding_left="5dp">

        </com.xu.xmaster.views.NavItemView>

    </LinearLayout>

</LinearLayout>