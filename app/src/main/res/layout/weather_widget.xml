<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ww_layout"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="#80000000"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ww_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/colorWhite"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/ww_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N月N日 星期N"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ww_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_location"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="N"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
    </LinearLayout>

    <!--remoteviews不能识别View-->
    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorGraya0" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ww_cond"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/h999"
            android:tint="@color/colorWhite" />

        <TextView
            android:id="@+id/ww_cond_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ww_tmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N℃"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>